{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "keyVaultName": {
      "type": "string"
    },
    "principalIds": {
      "type": "array"
    }
  },
  "variables": {},
  "functions": [
    {
      "namespace": "marelconnect",
      "members": {
        "templateLink": {
          "parameters": [
            {
              "name": "relativePath",
              "type": "string"
            }
          ],
          "output": {
            "type": "string",
            "value": "[uri(replace(deployment().properties.templateLink.uri, 'library/keyVault/key-vault-sequenital-access-deploy.template.json', ''), parameters('relativePath'))]"
          }
        }
      }
    }
  ],
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "[concat('Key-Vault-Access-Policy-Deployment-', copyindex('key-vault-access-copy'))]",
      "type": "Microsoft.Resources/deployments",
      "condition": "[greater(length(parameters('principalIds')), 0)]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[marelconnect.templateLink('library/keyVault/key-vault-full-access-policy.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultName": { "value": "[parameters('keyVaultName')]" },
          "objectId": { "value": "[parameters('principalIds')[copyindex('key-vault-access-copy')]]" }
        }
      },
      "copy": {
        "name": "key-vault-access-copy",
        "mode": "Serial",
        "count": "[max(length(parameters('principalIds')), 1)]"
      }
    }
  ],
  "outputs": {}
}
