{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "nameConfig": {
      "type": "object",
      "metadata": {
        "description": "The name config for the resource. includes 'prefix', 'environment' and 'system'"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourcegroup().location]"
    },
    "iotHubs": {
      "type": "array"
    },
    "keyVaultName": { "type": "string", "defaultValue": "<REPLACE-WITH-KEY-VAULT-NAME>" },
    "connectionStringSecretName": { "type": "string", "defaultValue": "deviceProvisioningServiceConnectionString" }
  },
  "variables": {
    "resource": "dps",
    "nameDeploymentName": "[concat(parameters('nameconfig').prefix, parameters('nameconfig').environment, parameters('nameconfig').system, parameters('location'), variables('resource'), 'NameDeployment')]",
    "resourceDeploymentName": "[concat(parameters('nameconfig').prefix, parameters('nameconfig').environment, parameters('nameconfig').system, parameters('location'), variables('resource'), 'Deployment')]"
  },
  "functions": [
    {
      "namespace": "marelconnect",
      "members": {
        "templateLink": {
          "parameters": [
            {
              "name": "relativeLink",
              "type": "string"
            }
          ],
          "output": {
            "type": "string",
            "value": "[uri(replace(deployment().properties.templateLink.uri, 'library/deviceProvisioningService/mc-device-provisioning-service.template.json', ''), parameters('relativeLink'))]"
          }
        }
      }
    }
  ],
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "name": "[variables('nameDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[marelconnect.templateLink('library/naming/naming-convention.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": { "value": "[parameters('nameConfig').prefix]" },
          "environment": { "value": "[parameters('nameConfig').environment]" },
          "system": { "value": "[parameters('nameConfig').system]" },
          "location": { "value": "[parameters('location')]" },
          "resource": { "value": "[variables('resource')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "name": "[variables('resourceDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[marelconnect.templateLink('library/deviceProvisioningService/device-provisioning-service.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "name": {
            "value": "[reference(variables('nameDeploymentName')).outputs.name.value]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "iotHubs": {
            "value": "[parameters('iotHubs')]"
          },
          "keyVaultName": { "value": "[parameters('keyVaultName')]" },
          "connectionStringSecretName": { "value": "[parameters('connectionStringSecretName')]" }
        }
      }
    }
  ],
  "outputs": {}
}
