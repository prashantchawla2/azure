{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "nameConfig": {
      "type": "object",
      "metadata": {
        "description": "The name config for the resource. includes 'prefix', 'environment' and 'system'"
      }
    },
    "tshirtSize": {
      "type": "string",
      "allowedValues": ["small", "medium", "large"]
    },
    "location": {
      "type": "string"
    },

    "keyVaultName": { "type": "string", "defaultValue": "<REPLACE-WITH-KEY-VAULT-NAME>" },
    "connectionStringSecretName": { "type": "string", "defaultValue": "iotHubConnectionString" },
    "telemetryEventHubConnectionStringSecretReference": { "type": "object" },
    "deviceDiscoveryEventHubConnectionStringSecretReference": { "type": "object" },
    "routes": {
      "type": "array",
      "defaultValue": []
    }
  },
  "variables": {
    "resource": "ih",
    "nameDeploymentName": "[concat(parameters('nameconfig').prefix, parameters('nameconfig').environment, parameters('nameconfig').system, parameters('location'), variables('resource'), 'NameDeployment')]",
    "resourceDeploymentName": "[concat(parameters('nameconfig').prefix, parameters('nameconfig').environment, parameters('nameconfig').system, parameters('location'), variables('resource'), 'Deployment')]"
  },
  "functions": [
    {
      "namespace": "marelconnect",
      "members": {
        "templateLink": {
          "parameters": [
            {
              "name": "relativeLink",
              "type": "string"
            }
          ],
          "output": {
            "type": "string",
            "value": "[uri(replace(deployment().properties.templateLink.uri, 'library/iotHub/mc-iot-hub.template.json', ''), parameters('relativeLink'))]"
          }
        }
      }
    }
  ],
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "name": "[variables('nameDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[marelconnect.templateLink('library/naming/naming-convention.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": { "value": "[parameters('nameConfig').prefix]" },
          "environment": { "value": "[parameters('nameConfig').environment]" },
          "system": { "value": "[parameters('nameConfig').system]" },
          "location": { "value": "[parameters('location')]" },
          "resource": { "value": "[variables('resource')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "name": "[variables('resourceDeploymentName')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[marelconnect.templateLink('library/iotHub/iot-hub.template.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "name": {
            "value": "[reference(variables('nameDeploymentName')).outputs.name.value]"
          },
          "tshirtSize": {
            "value": "[parameters('tshirtSize')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },

          "keyVaultName": {
            "value": "[parameters('keyVaultName')]"
          },
          "connectionStringSecretName": {
            "value": "[parameters('connectionStringSecretName')]"
          },
          "telemetryEventHubConnectionString": "[parameters('telemetryEventHubConnectionStringSecretReference')]",
          "deviceDiscoveryEventHubConnectionString": "[parameters('deviceDiscoveryEventHubConnectionStringSecretReference')]",
          "routes": {
            "value": "[parameters('routes')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "iotHubLocation": {
      "type": "string",
      "value": "[reference(variables('resourceDeploymentName')).outputs.iotHubLocation.value]"
    },
    "iotHubHostName": {
      "type": "string",
      "value": "[reference(variables('resourceDeploymentName')).outputs.iotHubHostName.value]"
    },
    "iotHubName": {
      "type": "string",
      "value": "[reference(variables('resourceDeploymentName')).outputs.iotHubName.value]"
    },
    "iotHubConnectionString": {
      "type": "string",
      "value": "[reference(variables('resourceDeploymentName')).outputs.iotHubConnectionString.value]"
    }
  }
}
